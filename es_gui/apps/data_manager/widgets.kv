#: import calendar calendar
#: import webbrowser webbrowser
#: import datetime datetime
#: import app kivy.app
#:set ercot_data_start_year 2010
#:set isone_data_start_year 2016
#:set pjm_data_start_year 2009
#:set miso_data_start_year 2015
#:set nyiso_data_start_year 2013
#:set its_current_year datetime.datetime.now().year

<DataManagerTitle@TitleTextBase>:
    color: C(hex_primary)

<DataManagerTabContentTitle@TitleTextBase>:
    color: C(hex_secondary)
    font_size: large_font
    size_hint_y: 0.2

<DataManagerTabContentSubtitle@TitleTextBase>:
    color: C(hex_pms178)
    font_size: stnd_font
    size_hint_y: 0.1

<DataManagerTabContentBodyText@BodyTextBase>:
    font_name: 'Exo 2'

<DataManagerMenuTileButton@MenuTileButton>:
    font: huge_font

<DataManagerTabCheckbox>:
    color: (0.1, 0.1, 0.1, 1)
    size_hint_x: 0.05

<DataManagerHomeScreen>:
    rto_mo_data_button: rto_mo_data_button

    GridLayout:
        cols: 1
        padding: 400, 150
        spacing: 5

        DataManagerTitle:
            text: 'Download data for QuESt applications.'
            size_hint_y: 0.1
        
        BodyTextBase:
            markup: True
            text: '[font=Modern Pictograms][size=48]w[/size][/font] Internet connectivity is required to download data.'
            size_hint_y: 0.1

        GridLayout:
            cols: 1
            spacing: 5
            row_force_default: True
            row_default_height: self.height/4
            padding: (0, 50)

            DataManagerMenuTileButton:
                id: rto_mo_data_button
                background_color: C(hex_primary)
                text: 'ISO/RTO Market and Operations Data'
                on_release: root.manager.current = 'data_manager_rto_mo_data'

<TabbedPanelHeader>:
    background_color: C(hex_cloud_dancer) if self.state == 'down' else C(hex_white)
    color: C(hex_secondary) if self.state == 'down' else C(hex_black)
    #underline: True if self.state == 'down' else False
    font_size: stnd_font
    background_image: os.path.join('es_gui', 'resources', 'images', 'white.png')
    background_normal: os.path.join('es_gui', 'resources', 'images', 'white.png')
    background_down: os.path.join('es_gui', 'resources', 'images', 'white.png')

<DataManagerPanelERCOT>:
    year_start: year_start
    year_end: year_end
    output_log: output_log
    execute_download_button: execute_download_button
    progress_bar: progress_bar

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 5

        canvas.before:
            Color:
                rgba: C(hex_cloud_dancer)
            Rectangle:
                size: self.size
                pos: self.pos
        
        DataManagerTabContentTitle:
            text: 'ERCOT'

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: (525, 0)
            size_hint_y: 0.6

            DataManagerTabContentSubtitle:
                text: 'Range of years'
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.15
                spacing: 10

                DataManagerTabContentBodyText:
                    text: 'Start:'
                    size_hint_x: 0.4

                PlotSpinner:
                    id: year_start
                    size_hint_x: 0.6
                    text: 'Year'
                    values: [str(year) for year in range(ercot_data_start_year, its_current_year+1)]
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.15
                spacing: 10

                DataManagerTabContentBodyText:
                    text: 'End:'
                    size_hint_x: 0.4

                PlotSpinner:
                    id: year_end
                    size_hint_x: 0.6
                    text: 'Year'
                    values: [str(year) for year in range(ercot_data_start_year, its_current_year+1)]
            
            BoxLayout:
                size_hint_y: 0.7
        
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'
            size_hint_y: 0.3
            #padding: 10

            BoxLayout:
                orientation: 'horizontal'
                size_hint_x: 0.8
                spacing: 10
                
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 10
                    size_hint_x: 0.85

                    TextInput:
                        id: output_log
                        size_hint_y: 0.9
                        readonly: True
                        allow_copy: False
                    
                    ProgressBar:
                        id: progress_bar
                        size_hint_y: 0.1
                        value: 0

                TileButton:
                    id: execute_download_button
                    size_hint_x: 0.15
                    background_color: C(hex_primary)
                    text: 'Download'
                    on_release: root.execute_download()

<DataManagerPanelISONE>:
    credential_help: credential_help
    acc_user: acc_user
    acc_pw: acc_pw
    month_start: month_start
    year_start: year_start
    month_end: month_end
    year_end: year_end
    node_id: node_id
    labeled_chkbx_grid: labeled_chkbx_grid
    chkbx_zones: chkbx_zones
    chkbx_hub: chkbx_hub
